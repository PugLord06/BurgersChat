{
  "compilerOptions": {
    "jsx": "react", // Needed for frontend .tsx files
    "target": "ESNext", // Modern JavaScript features
    "module": "ESNext", // ESM for backend and frontend
    "outDir": "./dist", // Compiled JavaScript output
    "rootDir": "./src", // Source directory
    "strict": true, // Strict type-checking
    "esModuleInterop": true, // CommonJS interop
    "skipLibCheck": true, // Skip .d.ts checks
    "forceConsistentCasingInFileNames": true, // Case sensitivity
    "moduleResolution": "node", // Node.js module resolution
    "allowJs": true, // Allow .js files
    "noEmit": false // Emit compiled JavaScript
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}